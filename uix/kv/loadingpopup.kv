#: import Widgwt uix.widgets

<LoadingPopup>:
    size_hint: 0, 0
    size: 0, 0

    GridLayout:
        canvas.before:
            Color:
                rgba: .1, .1, .1, .5
            Rectangle:
                pos: 0, 0
                size: 10000, 10000

        size_hint: None, None
        size: self.minimum_size
        rows: 2

        Image:
            size_hint: None, None
            size: self.texture_size
            allow_stretch: True
            source: 'data/images/icon.png'
        GridLayout:
            cols: 3

            Widget

            Label:
                text: 'Загрузка...'
                font_size: sp(20)
                size_hint: None, None
                size: self.texture_size

            Widget
<Label>:
    font_name: 'Roboto-BoldItalic'

<Button>:
    font_name: 'Roboto-BoldItalic'

<TextInput>:
    font_name: 'Roboto-BoldItalic'

<Screen>:
    canvas.before:
        #Color: 
            #rgba: .85, .66, .01, 1
        Rectangle:
            source: 'data/images/background.jpg'
            pos: self.pos
            size: self.size

<LB@Label>:
    font_size: '15sp'
    color: 0, .2, .4, 1
    size_hint: None, None
    size: self.texture_size[0]+5, self.texture_size[1]+5

<Head@LB>:
    font_size: '17sp'
    size: self.texture_size[0]+10,self.texture_size[1]+10
    
<TI@TextInput>:
    size_hint_y: None
    font_size: '16sp'
    height: self.minimum_height+10
    multiline: False

<Apply@Button>:
    text: 'Принять'
    font_size: '16sp'
    background_normal: ''
    background_color: 0, .2, .4, 1
    size_hint: None, None
    size: self.texture_size[0]*2.3, self.texture_size[1]*2.3


<TwoFAKeyEnterPopup>:
    size_hint_y: None
    size_hint_x: None
    width: gl.width + dp(30)
    height: gl.height + dp(30)
    pos_hint: {'center_y': 0.7}

    GridLayout:
        id: gl
        cols: 1
        size_hint: None, None
        width: app.root_window.width*0.75
        height: self.minimum_height
        orientation: 'vertical'

        Label:
            text: 'Код для двухфакторной авторизации:'
            font_size: sp(20)
            size_hint_y: None
            height: self.texture_size[1] + dp(10)
        BoxLayout:
            size_hint_y: None

            TextInput:
                id: textinput
                multiline: False
                font_size: sp(45)
            Button:
                text: 'Ввод'
                font_size: sp(20)
                size_hint: None, None
                width: self.texture_size[0] + dp(8)
                on_release: root.twofa_auth(textinput.text)


<AuthScreen>:
    name: 'auth_screen'

    GridLayout:
        rows: 5
        spacing: dp(3)
        size_hint: None, None
        size: self.minimum_size
        pos_hint: {'center_x':.5,'center_y':.75}

        Label:
            text: 'Авторизация ВК'
            color: 0, .2, .4, 1
            font_size: '20sp'
            padding_y: dp(5)
            size_hint: None, None
            size: self.texture_size

        TextInput:
            hint_text: 'Логин'.decode('utf-8') #KIVY BUG
            id: login_textinput
            size_hint: None, None
            font_size: '18sp'
            height: self.minimum_height
            width: self.height*10
            multiline: False

        TextInput:
            hint_text: 'Пароль'.decode('utf-8') #KIVY BUG
            id: pass_textinput
            size_hint: None, None
            font_size: '18sp'
            height: self.minimum_height
            width: self.height*10
            multiline: False

        Button:
            id: show_pass_label
            text: root.hide_password_text
            background_color: 0, 0, 0, 0
            color: 0, .2, .4, 1
            font_size: '16sp'
            padding_y: dp(9)
            size_hint_y: None
            height: self.texture_size[1]
            on_release: root.update_pass_input_status(self)

        GridLayout:
            cols: 3
            size_hint_y: None
            size: self.minimum_size

            Label:
            Button:
                id: enter
                text: 'Войти'
                font_size: '16sp'
                padding_y: dp(10)
                background_normal: ''
                background_color: 0, .2, .4, 1
                size_hint: 1.3, None
                height: self.texture_size[1]
                on_release: root.log_in()
            Label:

    Button:
        id: pass_auth
        text: 'Пропустить'
        font_size: '16sp'
        background_normal: ''
        background_color: 0, .2, .4, .5
        size_hint: None, None
        size: self.texture_size[0]*2.3, self.texture_size[1]*2.3
        pos_hint: {'center_x':.5}
        pos: self.pos[0], root.height*.05        
        on_release: root.parent.show_main_screen()
        disabled: False


<MainScreen>:
    name: 'main_screen'

    BoxLayout:
        orientation: 'vertical'
        
        ActionBar:
            id: actionbar
            ActionView:
                ActionPrevious:
                ActionOverflow:
                    mode: 'spinner'
                    ActionButton:
                        text: 'Настройки'
                        on_release: app.open_settings()                        
                    ActionButton:
                        text: 'Авторизация'
                        minimum_width: '110sp'
                        on_release:  
                            root.parent.show_auth_screen()
                    ActionButton:
                        text: 'Выйти'
                        on_release: root.logout()

        Carousel:
            loop: True

            FloatLayout:
                Button:
                    id: main_btn
                    font_size: '16sp'
                    background_normal: ''
                    background_color: 0, .2, .4, 1
                    size_hint: None, None
                    size: self.texture_size[0]*2.3, self.texture_size[1]*2.3
                    pos_hint: {'center_x':.5}
                    pos_hint_y: None
                    pos: self.pos[0], actionbar.pos[1]-actionbar.height*1.5
                    on_release: root.on_main_btn_press()
                Head:
                    id: answers_count_lb
                    pos_hint: {'center_x':.5}
                    pos_hint_y: None
                    pos: self.pos[0], main_btn.pos[1]-actionbar.height*1.3
                Apply:
                    id: open_cc_screen_btn
                    text: 'Настройки пользовательских команд'
                    width: self.texture_size[0] + dp(4)
                    pos_hint: {'center_x':.5, 'center_y':.1}
                    on_release: root.parent.show_custom_commands_screen()
                    background_color: 1, 0, 0, .8 # WIP feature

            FloatLayout:
                Apply:
                    text: 'Мануал'
                    size_hint_x: .5
                    pos_hint: {'center_x':.5, 'center_y':.5}
                    on_release: root.show_manual()


<CustomCommandsScreen>:
    name: 'cc_screen'

    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(5)

        ScrollView:
            GridLayout:
                id: cc_list
                cols: 1
                spacing: dp(2)
                size_hint_y: None
                height: self.minimum_size[1]

        GridLayout:
            cols: 3
            size_hint_y: None
            height: self.minimum_height

            GridLayout:
                cols: 2

                Button:
                    text: 'Добавить'
                    size_hint_x: None
                    width: self.texture_size[0] + dp(5)
                    on_release: root.open_new_command_popup()

                Widget:
            Button:
                text: 'Вернуться'
                size_hint_y: None
                height: self.texture_size[1]*2.4 + dp(3)
                on_release: root.leave()
            GridLayout:
                cols: 2

                Widget:
                Button:
                    text: 'Сортировка'
                    size_hint_x: None
                    width: self.texture_size[0] + dp(5)
                    on_release: root.sort_blocks()

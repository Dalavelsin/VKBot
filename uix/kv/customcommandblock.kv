<CustomCommandBlock>:
    dropdown: None
    cols: 1
    size_hint_y: None
    height: self.minimum_height

    CommandButton:
        id: dropdown_btn
        background_color: 0, .2, .4, 1


<ListDropDown>:
    id: dropdown
    required_spacing: dp(2)


<CommandButton>:
    font_name: 'Roboto-BoldItalic'
    background_normal: ''
    background_color: .24, .69, .55, 1
    halign: 'center'
    size_hint_y: None
    padding_x: dp(30)
    text: 'команда'
    text_size: self.width, None
    height: self.texture_size[1] + dp(20)

#: import LowerTextInput uix.widgets
#: import Widget uix.widgets
#: import FontelloButton uix.widgets


<OptionButton@FontelloButton>:
    states: (0, 1, 2)
    current_state: 0

    background_color: 1, 0, 0, .6
    size_hint: 1.5, None


<EditCommandPopup>:
    title_font: 'Roboto-BoldItalic'
    size_hint_y: None
    height: content.height + dp(70)
    pos_hint: {'center_y':.6}

    GridLayout:
        id: content
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        spacing: dp(6)

        GridLayout:
            rows: 3
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(5)

            LowerTextInput:
                id: command_textinput
                size_hint_y: None
                height:
                    min((self.line_height+dp(1))*6, max((self.line_height+dp(1))*3, self.minimum_height))
                hint_text: 'Команда'.decode('utf8')

            TextInput:
                id: response_textinput
                size_hint_y: None
                height:
                    min((self.line_height+dp(1))*6, max((self.line_height+dp(1))*3, self.minimum_height))
                hint_text: 'Ответ'.decode('utf8')

            GridLayout:
                cols: 9
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)

                OptionButton:
                    states: (0, 2)
                    id: regex_btn
                    text: 'G'
                    on_release: root.switch_option_state(self, self.states)

                Widget

                OptionButton:
                    states: (0, 1, 2)
                    id: force_unmark_btn
                    text: 'F'
                    on_release: root.switch_option_state(self, self.states)

                Widget

                OptionButton:
                    states: (0, 1, 2)
                    id: force_forward_btn
                    text: 'M'
                    on_release: root.switch_option_state(self, self.states)

                Widget

                OptionButton:
                    states: (0, 1, 2)
                    id: appeal_only_btn
                    text: 'A'
                    on_release: root.switch_option_state(self, self.states)

                Widget

                OptionButton:
                    states: (0, 2)
                    id: disable_btn
                    text: 'D'
                    on_release: root.switch_option_state(self, self.states)

        GridLayout:
            cols: 3
            size_hint_y: None
            spacing: dp(5)

            Button:
                id: apply_btn
                _callback: None
                text: 'Применить'

            FontelloButton:
                id: delete_command_btn
                _callback: None
                text: 'C'
                size_hint_x: None
                background_color: 1, 0, 0, 1

            Button:
                text: 'Отмена'
                on_release: root.dismiss()

#: import LowerTextInput uix.lowertextinput

<Button>:
    font_name: 'Roboto-BoldItalic'

<TextInput>:
    font_name: 'Roboto-BoldItalic'


<OptionButton@Button>:
    states: (0, 1, 2)
    current_state: 0

    font_size: '16sp'
    background_color: 1, 0, 0, .6
    size_hint: None, None
    size: self.texture_size[0], self.texture_size[1]*2


<EditCommandPopup>:
    title_font: 'Roboto-BoldItalic'
    size_hint_y: None
    height: content.height + dp(70)
    pos_hint: {'center_y':.6}

    GridLayout:
        id: content
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        spacing: dp(6)

        GridLayout:
            rows: 3
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(5)

            LowerTextInput:
                id: command_textinput
                size_hint_y: None
                height: self.minimum_height
                hint_text: 'Команда'.decode('utf8')
            TextInput:
                id: response_textinput
                size_hint_y: None
                height: self.minimum_height
                hint_text: 'Ответ'.decode('utf8')
            GridLayout:
                cols: 6
                size_hint_y: None
                height: self.minimum_height
                spacing: dp(5)

                OptionButton:
                    states: (0, 2)
                    id: regex_btn
                    text: '    r    '
                    on_release: root.switch_option_state(self, self.states)

                OptionButton:
                    states: (0, 1, 2)
                    id: force_unmark_btn
                    text: '    !\'   '
                    on_release: root.switch_option_state(self, self.states)

                OptionButton:
                    states: (0, 1, 2)
                    id: force_forward_btn
                    text: '    f    '
                    on_release: root.switch_option_state(self, self.states)

                OptionButton:
                    states: (0, 1, 2)
                    id: appeal_only_btn
                    text: '    /    '
                    on_release: root.switch_option_state(self, self.states)

                OptionButton:
                    states: (0, 2)
                    id: disable_btn
                    text: '  откл  '
                    on_release: root.switch_option_state(self, self.states)

                Widget:

        GridLayout:
            cols: 3
            size_hint_y: None
            height: self.minimum_height
            spacing: dp(5)

            Button:
                id: apply_btn
                _callback: None
                text: 'Применить'
            Button:
                id: delete_command_btn
                _callback: None
                text: '      X      '
                font_size: '16sp'
                background_color: 1, 0, 0, 1
                size_hint: None, None
                size: self.texture_size[0], self.texture_size[1]*2.3
            Button:
                text: 'Отмена'
                on_release: root.dismiss()
